{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {
      "@/exceptions": ["./src/exceptions/index.ts"],
      "@/shared/*": ["./src/shared/*"],
      "@/decorators/*":  ["./src/decorators/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/types": ["./src/types.ts"],
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
